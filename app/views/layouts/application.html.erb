<!DOCTYPE html>
<html>
<head>
  <title>Christie Metson</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
  <%= render 'favicon' %>
</head>
<body>

  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

  <% if logged_in? %>
  <div class="session">
    <p>Logged in as: <%= current_admin.username %></p>
    <form class="" action="/sessions/<%= current_admin.id %>" method="post">
      <input type="hidden" value="delete" name="_method">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <button>Log out</button>
    </form>
  </div>
  <% end %>

  <div id="largeNav">
    <ul>
      <% if request.path == '/' %>
        <li><%= link_to "Home", root_path, class: "selected" %></li>
      <% else %>
        <li><%= link_to "Home", root_path %></li>
      <% end %>

      <% if request.path == '/about' %>
        <li><%= link_to "About", about_path, class: "selected" %></li>
      <% else  %>
      <li><%= link_to "About", about_path %></li>
      <% end %>

      <% if request.path == '/work' %>
        <li><%= link_to "Work", work_path, class: "selected" %></li>
      <% else  %>
      <li><%= link_to "Work", work_path %></li>
      <% end %>

      <% if request.path =~ /posts(.*)/ %>
        <li><%= link_to "Journal", posts_path, class: "selected" %></li>
      <% else %>
        <li><%= link_to "Journal", posts_path %></li>
      <% end %>
    </ul>
  </div>

  <div id="smallNav">
    <input type="checkbox" />
    <span></span>
    <span></span>
    <span></span>
    <ul id="hamburger">
      <% if request.path == '/' %>
        <li><%= link_to "Home", root_path, class: "selected" %></li>
      <% else %>
        <li><%= link_to "Home", root_path %></li>
      <% end %>

      <% if request.path == '/about' %>
        <li><%= link_to "About", about_path, class: "selected" %></li>
      <% else  %>
      <li><%= link_to "About", about_path %></li>
      <% end %>

      <% if request.path == '/work' %>
        <li><%= link_to "Work", work_path, class: "selected" %></li>
      <% else  %>
      <li><%= link_to "Work", work_path %></li>
      <% end %>

      <% if request.path =~ /posts(.*)/ %>
        <li><%= link_to "Journal", posts_path, class: "selected" %></li>
      <% else %>
        <li><%= link_to "Journal", posts_path %></li>
      <% end %>
    </ul>
  </div>


<div class="container">
  <%= yield %>
</div>

</body>
</html>
