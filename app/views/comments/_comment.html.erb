<div class="container post-wrapper">
  <p>
    Name: <%= comment.name %>
  </p>
  <p>
    Body: <%= comment.body %>
  </p>
  <p>
    Submitted <%= time_ago_in_words(comment.created_at) %> ago.
  </p>
  <p><%= link_to 'Delete', [comment.post, comment], method: :delete,
  data: { confirm: 'Are you sure?' } %></p>
</div>
